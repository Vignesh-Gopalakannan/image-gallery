<?xml version="1.0" encoding="utf-8"?>
<widget id="mxtechies.imagezoomviewer.ImageZoomViewer" pluginWidget="true" needsEntityContext="true" offlineCapable="true" supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Image Gallery</name>
    <description>Widget to display series of images with zoom in, zoom out and rotate features</description>
    <icon></icon>
    <properties>
        <propertyGroup caption="General">
            <property key="imageList" type="datasource" isList="true" required="true">
                <caption>Data source</caption>
                <description>Data source for the list of images (Generalized System.Image Entity)</description>
            </property>
            <property key="visibleImages" type="integer" defaultValue="2">
                <caption>Visible Images</caption>
                <description>No of images to be visible</description>
            </property>
            <property key="fontSize" type="integer" defaultValue="36">
                <caption>Font Size</caption>
                <description>Font size of the remaining image count</description>
            </property>
            <property key="isLoop" type="boolean" defaultValue="true">
                <caption>Loop Image</caption>
                <description>Whether to cycle the preview, when the number is reached</description>
            </property>
            <property key="isBannerVisible" type="boolean" defaultValue="true">
                <caption>Display Banner</caption>
                <description>Display navigation icon, rotate, zoom in and zoom out banner</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Styles and Animation">
            <property key="imageWidth" type="integer" defaultValue="164">
                <caption>Image Width</caption>
                <description>Width of the visible image</description>
            </property>
            <property key="imageHeight" type="integer" defaultValue="164">
                <caption>Image Height</caption>
                <description>Height of the visible image</description>
            </property>
            <property key="transitionSpeed" type="integer" defaultValue="2">
                <caption>Transition Speed</caption>
                <description>Transition speed of image when viewed in milliseconds</description>
            </property>
        </propertyGroup>
    </properties>
</widget>